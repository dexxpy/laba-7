#include <iostream>
using namespace std;

int main() 
{
    setlocale(LC_ALL, "");
    int number, digit, sum = 0, product = 1;

    cout << "Введите число: ";
    cin >> number;

    int tempNumber = number;
    while (tempNumber > 0) {
        digit = tempNumber % 10;
        sum += digit;
        product *= digit;
        tempNumber /= 10;
    }

    cout << "Сумма цифр числа: " << sum << endl;
    cout << "Произведение цифр числа: " << product << endl;

    return 0;
}
